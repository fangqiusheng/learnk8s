{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis-slave",
      "labels":{
         "name":"redis-slave"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "name":"redis-slave"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"redis-slave"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"slave",
		  "env":[
                     {
                        "name":"GET_HOSTS_FROM",
			"value":"env"
                     }
                  ],
                  "image":"kubeguide/guestbook-redis-slave",
                  "ports":[
                     {
                        "containerPort":6379
                     }
                  ]
               }
            ]
         }
      }
   }
}
